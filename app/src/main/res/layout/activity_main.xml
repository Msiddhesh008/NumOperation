<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_margin="24dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/number_of_operation"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#302B29"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/numOffDigits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/enter_global_variable"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/oddEven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text=""
            android:textSize="18sp" />

        <TextView
            android:id="@+id/factorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text=""
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text=""
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="26dp"
            android:autofillHints="abc"
            android:elegantTextHeight="false"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:singleLine="false"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#232323"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="72sp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#DDF66E42"
            android:fontFamily="@font/poppins_semibold"
            android:soundEffectsEnabled="true"
            android:text="@string/calculate"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exit"
                android:layout_width="150dp"
                android:layout_height="72sp"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="18dp"
                android:backgroundTint="#EA724E"
                android:fontFamily="@font/poppins_semibold"
                android:soundEffectsEnabled="true"
                android:text="@string/exit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/clear"
                android:layout_width="150dp"
                android:layout_height="72sp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="18dp"
                android:backgroundTint="#EA724E"
                android:fontFamily="@font/poppins_semibold"
                android:soundEffectsEnabled="true"
                android:text="@string/clear"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>